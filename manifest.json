{
    "name": "Blankpad",
    "version": "1.0",
    "manifest_version": 2,
    "description": "A simple notepad extension for Google Chrome",
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
      },
    "browser_action":{
        "default_icon": "img/icon48.png",
        "default_title": "Blankpad"
    },
    "background":{
        "scripts":[
          "js/background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "tabs"
    ],
    "commands": {
        "_execute_browser_action": {
          "description": "Open a new blank tab",
          "suggested_key": {
            "default": "Ctrl+B",
            "mac": "Command+B"
          }
        }
    }
}